# Railway Configuration
# This file tells Railway how to build and run the VICORA project

# Build configuration
build:
  builder: nixpacks
  buildCommand: "python -m pip install -r requirements.txt"

# Deploy configuration  
deploy:
  startCommand: "python -m uvicorn main_railway:app --host 0.0.0.0 --port 8000"
  healthcheckPath: "/health"
  healthcheckTimeout: 100